{
   "request":{
      "headers":{
         "Accept":"application/json"
      },
      "method":"GET",
      "params":{

      },
      "path":"/v1.0/0/loadbalancers/:id.json"
   },
   "response":{
      "headers":{
         "Content-Type":"application/json"
      },
      "status":200,
      "body":{
         "type":"object",
         "$schema":"http://json-schema.org/draft-03/schema",
         "required":true,
         "properties":{
            "loadBalancer":{
               "type":"object",
               "required":true,
               "properties":{
                  "algorithm":{
                     "type":"string",
                     "default":"RANDOM",
                     "required":true
                  },
                  "cluster":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "name":{
                           "type":"string",
                           "default":"c1.dfw1",
                           "required":true
                        }
                     }
                  },
                  "connectionLogging":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "enabled":{
                           "type":"boolean",
                           "default":true,
                           "required":true
                        }
                     }
                  },
                  "connectionThrottle":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "maxConnectionRate":{
                           "type":"number",
                           "default":50,
                           "required":true
                        },
                        "maxConnections":{
                           "type":"number",
                           "default":100,
                           "required":true
                        },
                        "minConnections":{
                           "type":"number",
                           "default":10,
                           "required":true
                        },
                        "rateInterval":{
                           "type":"number",
                           "default":60,
                           "required":true
                        }
                     }
                  },
                  "created":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "time":{
                           "type":"string",
                           "default":"2010-11-30T03:23:42Z",
                           "required":true
                        }
                     }
                  },
                  "id":{
                     "type":"number",
                     "default":2000,
                     "required":true
                  },
                  "name":{
                     "type":"string",
                     "default":"sample-loadbalancer",
                     "required":true
                  },
                  "nodes":{
                     "type":"array",
                     "required":true,
                     "minItems": 2,
                     "items":
                        {
                           "type":"object",
                           "required":true,
                           "properties":{
                              "address":{
                                 "type":"string",
                                 "format": "ipv4",
                                 "default":"<%= Fog::Mock.random_ip %>",
                                 "required":true
                              },
                              "condition":{
                                 "type":"string",
                                 "default":"ENABLED",
                                 "required":true
                              },
                              "id":{
                                 "type":"number",
                                 "default":1411,
                                 "required":true
                              },
                              "port":{
                                 "type":"number",
                                 "default":80,
                                 "required":true
                              },
                              "status":{
                                 "type":"string",
                                 "default":"ONLINE",
                                 "required":true
                              }
                           }
                        }
                  },
                  "port":{
                     "type":"number",
                     "default":80,
                     "required":true
                  },
                  "protocol":{
                     "type":"string",
                     "default":"HTTP",
                     "required":true
                  },
                  "sessionPersistence":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "persistenceType":{
                           "type":"string",
                           "default":"HTTP_COOKIE",
                           "required":true
                        }
                     }
                  },
                  "sourceAddresses":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "ipv4Public":{
                           "type":"string",
                           "default":"10.12.99.28",
                           "required":true
                        },
                        "ipv4Servicenet":{
                           "type":"string",
                           "default":"10.0.0.0",
                           "required":true
                        },
                        "ipv6Public":{
                           "type":"string",
                           "default":"2001:4801:79f1:1::1/64",
                           "required":true
                        }
                     }
                  },
                  "status":{
                     "type":"string",
                     "default":"ACTIVE",
                     "required":true
                  },
                  "timeout":{
                     "type":"number",
                     "default":30,
                     "required":true
                  },
                  "updated":{
                     "type":"object",
                     "required":true,
                     "properties":{
                        "time":{
                           "type":"string",
                           "default":"2010-11-30T03:23:44Z",
                           "required":true
                        }
                     }
                  },
                  "virtualIps":{
                     "type":"array",
                     "required":true,
                     "items":{
                        "type":"object",
                        "required":true,
                        "properties":{
                           "address":{
                              "type":"string",
                              "default":"206.10.10.210",
                              "required":true
                           },
                           "id":{
                              "type":"number",
                              "default":1000,
                              "required":true
                           },
                           "ipVersion":{
                              "type":"string",
                              "default":"IPV4",
                              "required":true
                           },
                           "type":{
                              "type":"string",
                              "default":"PUBLIC",
                              "required":true
                           }
                        }
                     }
                  }
               }
            }
         }
      }
   }
}
